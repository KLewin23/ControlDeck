{
  "name": "control-deck",
  "homepage": "./",
  "author": "Kieran Lewin <kieran.lewin2000@gmail.com>",
  "version": "v1.1.0",
  "private": true,
  "main": "public/electron.js",
  "dependencies": {
    "@material-ui/core": "^4.11.0",
    "@material-ui/icons": "^4.9.1",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "@types/enzyme": "^3.10.5",
    "@types/express": "^4.17.7",
    "@types/jest": "^24.0.0",
    "@types/node": "^12.0.0",
    "@types/qrcode": "^1.3.4",
    "@types/qrcode.react": "^1.0.1",
    "@types/react": "^16.9.0",
    "@types/react-color": "^3.0.4",
    "@types/react-dom": "^16.9.0",
    "@types/react-redux": "^7.1.9",
    "@types/react-test-renderer": "^16.9.3",
    "custom-electron-titlebar": "^3.2.3",
    "electron-updater": "^4.3.4",
    "express": "^4.17.1",
    "fontsource-overpass": "^2.2.6",
    "get-port": "^5.1.1",
    "internal-ip": "^6.0.0",
    "nodemon": "^2.0.4",
    "qrcode": "^1.4.4",
    "qrcode.react": "^1.0.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-redux": "^7.2.1",
    "react-scripts": "3.4.1",
    "redux": "^4.0.5",
    "typescript": "~3.7.2"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "jest --forceExit",
    "rebuild-fix": "npm rebuild --runtime=electron --target=1.1.3 --disturl=https://atom.io/download/atom-shell --abi=72",
    "electron-start": "ELECTRON_START_URL=http://localhost:3000 electron .",
    "electron-start-win": "set MODE=DEV&& set ELECTRON_START_URL=http://localhost:3000 && electron . ",
    "dev": "nodemon --exec yarn electron-start",
    "dev-win": "nodemon --exec npm run electron-start-win",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "electron": "^9.4.0",
    "electron-builder": "^22.8.0",
    "electron-rebuild": "^2.0.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.3",
    "jest-enzyme": "^7.1.2",
    "prettier": "2.0.5",
    "react-test-renderer": "^16.13.1",
    "spectron": "^11.1.0"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "./Test/setup.js",
      "./node_modules/jest-enzyme/lib/index.js"
    ]
  },
  "build": {
    "appId": "com.controlDeck.app",
    "compression": "normal",
    "productName": "Control Deck",
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "public/electron.js"
    ],
    "extends": null,
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "nsis"
    },
    "publish": [
      {
        "provider": "github",
        "releaseType": "release"
      }
    ]
  }
}
